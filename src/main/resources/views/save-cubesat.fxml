    <TextField fx:id="yMassNewCubesat" layoutX="384.0" layoutY="171.0" prefHeight="25.0" prefWidth="103.0"/>
    <TextField fx:id="zMassNewCubesat" layoutX="384.0" layoutY="201.0" prefHeight="25.0" prefWidth="103.0"/>

    <Label layoutX="296.0" layoutY="132.0" text="м"/>
    <Label layoutX="296.0" layoutY="162.0" text="м"/>
    <Label layoutX="296.0" layoutY="192.0" text="м"/>

    <Label fx:id="newCubesatLog" layoutX="66.0" layoutY="278.0"/>

    <Button fx:id="saveCubesat" layoutX="187.0" layoutY="309.0" mnemonicParsing="false" onAction="#saveNewCubesat"
            text="Сохранить"/>
    <Button fx:id="cancelButton" layoutX="330.0" layoutY="309.0" mnemonicParsing="false" onAction="#cancelAction"
            text="Отменить"/>

</AnchorPane>
